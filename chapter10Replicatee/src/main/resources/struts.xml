<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
    <constant name="struts.devMode" value="${developper}"/>
    <!--
    <include file="manning/chapterThree/chapterThree.xml" />
    -->
    <package name="validation" namespace="/home" extends="struts-default">
        <action name="Validate">
            <result>/WEB-INF/index.jsp</result>
        </action>
    <action name="ValidateProcess" class="com.perso.validation.ValidateProcess">
        <result name="input">/WEB-INF/index.jsp</result>
        <result>/WEB-INF/result.jsp</result>
    </action>
    </package>
</struts>